        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a asp-controller="Home" asp-action="Index" class="nav-item nav-link active">Accueil</a>
                <a asp-controller ="Home" asp-action="About" class="nav-item nav-link">
                    Apropos</a>
                <a asp-controller="Home" asp-action="Formation" class="nav-item nav-link">Formations</a>
